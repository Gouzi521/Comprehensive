<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:rvp="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.ma.pingan.comprehensive.ui.activity.RankingActivity">

    <com.ma.pingan.comprehensive.widget.RVPIndicator
        android:id="@+id/indicatorSub"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        rvp:indicator_color="@color/common_bg"
        rvp:indicator_style="triangle"
        rvp:item_count="4"
        rvp:text_color_hightlight="@color/white"
        rvp:text_color_normal="@color/light_gray"
        ></com.ma.pingan.comprehensive.widget.RVPIndicator>


    <android.support.v4.view.ViewPager
        android:id="@+id/viewpagerSub"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp" />

</LinearLayout>
