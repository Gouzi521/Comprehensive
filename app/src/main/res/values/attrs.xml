<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--滑动颜色渐变tab-->
    <declare-styleable name="ShadeTabView">
        <attr name="normalIcon" format="reference" />
        <attr name="selectIcon" format="reference" />
        <attr name="tab" format="string" />
        <attr name="textSize" format="dimension" />
        <attr name="normalTextColor" format="color" />
        <attr name="selectTextColor" format="color" />
    </declare-styleable>

    <declare-styleable name="LoadingView">
        <attr name="loadding_color" format="color" />
        <attr name="ring_style" format="enum">
            <enum name="square" value="0" />
            <enum name="round" value="1" />
        </attr>
        <attr name="progress_style" format="enum">
            <enum name="material" value="0" />
            <enum name="linear" value="1" />
        </attr>

        <attr name="ring_width" format="dimension" />
        <attr name="ring_radius" format="dimension" />
    </declare-styleable>

    <attr name="item_count" format="integer" />
    <attr name="text_color_normal" format="color" />
    <attr name="text_color_hightlight" format="color" />
    <attr name="text_size" format="dimension" />
    <attr name="indicator_color" format="color" />
    <attr name="indicator_src" format="reference" />
    <attr name="indicator_style">
        <enum name="bitmap" value="0" />
        <enum name="line" value="1" />
        <enum name="square" value="2" />
        <enum name="triangle" value="3" />
    </attr>



    <!-- RVPIndicator -->
    <declare-styleable name="RVPIndicator">
        <attr name="item_count" />
        <attr name="text_color_normal" />
        <attr name="text_color_hightlight" />
        <attr name="text_size" />
        <attr name="indicator_color" />
        <attr name="indicator_src" />
        <attr name="indicator_style" />
    </declare-styleable>
    <declare-styleable name="Themes">
        <attr name="tagGroupStyle" format="reference" />
    </declare-styleable>

    <declare-styleable name="XlHRatingBar">
        <attr name="starCount" format="integer" /><!--总的星星数-->
        <attr name="canEdit" format="boolean" /><!--是否可以点击选择，有时候纯展示用不需要选择-->
        <attr name="widthAndHeight" format="dimension" /><!--单个星星的宽度-->
        <attr name="dividerWidth" format="dimension" /><!--星星左右间距-->
        <attr name="countSelected" format="integer" /><!--当前已选中的星星个数-->
        <attr name="stateResId" format="reference" /><!--单个星星不同状态下对应的图标-->
        <attr name="differentSize" format="boolean" /><!--是否支持大小不等星星样式-->
    </declare-styleable>


    <declare-styleable name="TagGroup">
        <attr name="atg_isAppendMode" format="boolean" />
        <attr name="atg_inputHint" format="string" />

        <attr name="atg_borderColor" format="color" />
        <attr name="atg_textColor" format="color" />
        <attr name="atg_backgroundColor" format="color" />

        <attr name="atg_dashBorderColor" format="color" />
        <attr name="atg_inputHintColor" format="color" />
        <attr name="atg_inputTextColor" format="color" />

        <attr name="atg_checkedBorderColor" format="color" />
        <attr name="atg_checkedTextColor" format="color" />
        <attr name="atg_checkedMarkerColor" format="color" />
        <attr name="atg_checkedBackgroundColor" format="color" />
        <attr name="atg_pressedBackgroundColor" format="color" />
        <attr name="atg_borderStrokeWidth" format="dimension" />
        <attr name="atg_textSize" format="dimension" />
        <attr name="atg_horizontalSpacing" format="dimension" />
        <attr name="atg_verticalSpacing" format="dimension" />
        <attr name="atg_horizontalPadding" format="dimension" />
        <attr name="atg_verticalPadding" format="dimension" />
    </declare-styleable>

    <!-- CircleImageView -->
    <declare-styleable name="CircleImageView">
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />
        <attr name="border_overlay" format="boolean" />
    </declare-styleable>
</resources>